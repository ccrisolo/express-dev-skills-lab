<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Express-Dev-Skills-Lab</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
    <h1>Skills</h1>
    <a href="/skills/new">Add new skill</a>
    <ul>
      <% skills.forEach(function(t, idx) { %>
        <li>
            <a href="/skills/<%= idx %>"><%= t.skill %></a>
            <form action="/skills/<%= idx %>?_method=DELETE"
              class="delete-form" method="POST">
              <button type="submit">X</button>
            </form>
        </li>
      <% }); %>
    </ul>
  </body>
</html>